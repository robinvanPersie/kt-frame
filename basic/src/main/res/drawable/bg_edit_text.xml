<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item
                    android:left="-1dp"
                    android:right="-1dp"
                    android:top="-1dp">
                <shape>
                    <stroke
                            android:width="0.5dp"
                            android:color="@color/under_line_color"/>
                    <padding
                            android:bottom="5dp"
                            android:top="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item
                    android:left="-1dp"
                    android:right="-1dp"
                    android:top="-1dp">
                <shape>
                    <stroke
                            android:width="0.5dp"
                            android:color="@color/colorAccent"/>
                    <padding
                            android:bottom="5dp"
                            android:top="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>